<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/purple_200"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- ðŸ“˜ Left Icon -->
        <ImageView
            android:id="@+id/iconPdf"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_pdf"
            android:contentDescription="PDF Icon"
            android:tint="@color/purple_500"
            android:layout_marginEnd="16dp" />

        <!-- ðŸ“„ Paper Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPaperTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question Paper Title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvPaperUploader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploaded by: Admin"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvPaperDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02 Nov 2025, 10:00 AM"
                android:textColor="@color/gray_dark"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
