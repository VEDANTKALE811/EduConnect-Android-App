<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_ai_gradient"
    android:padding="16dp">

    <!-- ðŸ§  Top Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAI"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTintMode="src_over"
        android:elevation="6dp"
        android:background="@drawable/bg_toolbar_glass"
        app:title="EduConnect AI Assistant ðŸ¤–"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/white" />

    <!-- ðŸ’¬ Input Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/purple_300"
        app:strokeWidth="1dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etQuery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type your question..."
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:maxLines="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAsk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:text="Ask"
                app:icon="@drawable/ic_ai"
                app:iconTint="@android:color/white"
                app:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                app:cornerRadius="50dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="10dp"
                app:iconPadding="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- â³ Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:indeterminateTint="@color/purple_500"
        android:visibility="gone" />

    <!-- ðŸ§¾ AI Response Box -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResponse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘‹ Hi! Ask me anything related to your studies, and Iâ€™ll help you out instantly."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
