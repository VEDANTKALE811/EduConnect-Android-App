<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_message_sent"
    android:fillViewport="true"
    tools:context=".StudentDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- ðŸŒˆ Header Section -->
        <!-- ðŸŒˆ Header Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="0dp"
        app:shapeAppearanceOverlay="@style/BottomRoundedShape"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:clipToOutline="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_admin_badge"
            android:paddingStart="24dp"
            android:paddingTop="50dp"
            android:paddingEnd="25dp"
            android:paddingBottom="40dp">

        <!-- ðŸŽ“ Logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:contentDescription="EduConnect Logo"
            android:elevation="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_educonnect_logo"
            app:shapeAppearanceOverlay="@style/CircleImage"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp" />

        <!-- ðŸ‘‹ Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text=" Student "
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- âœ¨ Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvWelcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Explore your learning space"
            android:textColor="#E6FFFFFF"
            android:textSize="15sp" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>


    <!-- ðŸŸ© Dashboard Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- Profile -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProfile"
                style="@style/DashboardCard">
                <LinearLayout style="@style/DashboardCardContent">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_person" />
                    <TextView style="@style/CardLabel" android:text="Profile" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Study Material -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStudyMaterial"
                style="@style/DashboardCard">
                <LinearLayout style="@style/DashboardCardContent">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_book" />
                    <TextView style="@style/CardLabel" android:text="Study Material" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Question Papers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuestionPapers"
                style="@style/DashboardCard">
                <LinearLayout style="@style/DashboardCardContent">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_question" />
                    <TextView style="@style/CardLabel" android:text="Question Papers" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Announcements -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAnnouncements"
                style="@style/DashboardCard">
                <LinearLayout style="@style/DashboardCardContent">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_announcement" />
                    <TextView style="@style/CardLabel" android:text="Announcements" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Chat -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChat"
                style="@style/DashboardCard">
                <LinearLayout style="@style/DashboardCardContent">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_chat" />
                    <TextView style="@style/CardLabel" android:text="Chat" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quiz -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuiz"
                style="@style/DashboardCard">
                <LinearLayout style="@style/DashboardCardContent">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_quiz" />
                    <TextView style="@style/CardLabel" android:text="Quiz" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Timetable -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTimetable"
                style="@style/DashboardCard">
                <LinearLayout style="@style/DashboardCardContent">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_timetable" />
                    <TextView style="@style/CardLabel" android:text="Timetable" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reminders -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReminders"
                style="@style/DashboardCard">
                <LinearLayout style="@style/DashboardCardContent">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_reminder" />
                    <TextView style="@style/CardLabel" android:text="Reminders" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- ðŸ‘¥ Join Group -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardJoinGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_group_add"
                    app:tint="@color/primaryColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join a Group"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ¤– AI Query -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAIQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_ai"
                    app:tint="@color/purple_500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Query"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ‘¥ View Groups -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewGroups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_group"
                    app:tint="@color/primaryColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View My Groups"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”´ Logout & Delete Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="25dp"
            app:backgroundTint="@color/red"
            android:layout_marginTop="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="25dp"
            app:backgroundTint="@color/purple_700"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
