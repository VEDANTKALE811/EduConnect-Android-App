<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_header_gradient"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ‘¥ Top Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_group_add"
            android:contentDescription="@string/create_group_icon"
            app:tint="@android:color/white"
            android:layout_marginBottom="16dp"/>

        <!-- ðŸ·ï¸ Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Group"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp"/>

        <!-- âœ¨ Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your class or club efficiently"
            android:textColor="#E8EAF6"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"/>

        <!-- ðŸ“ Group Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group Name"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸ“„ Description Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸ”¢ Generated Group Code Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_gravity="center">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXX"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="22sp"
                android:padding="16dp"
                android:layout_gravity="center" />


        </androidx.cardview.widget.CardView>

        <!-- ðŸ§© Generate Code Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerateCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Code"
            app:icon="@drawable/ic_qr_code"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:backgroundTint="@color/purple_200"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"/>

        <!-- âœ… Create Group Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreateGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Group"
            app:icon="@drawable/ic_done"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"/>

        <!-- â³ Loading Spinner -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:indeterminateTint="@android:color/white"/>
    </LinearLayout>
</ScrollView>
