<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_modern_gradient">

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarStudy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:background="@android:color/transparent"
        app:title="Study Materials"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/white" />

    <!-- RecyclerView for Materials -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerStudy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarStudy"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone" />

    <!-- Upload FAB (Visible only to Admin) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUploadStudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:contentDescription="Upload Study Material"
        android:src="@drawable/ic_upload"
        app:tint="@android:color/white"
        app:backgroundTint="@color/purple_500"
        app:elevation="8dp" />

</RelativeLayout>
