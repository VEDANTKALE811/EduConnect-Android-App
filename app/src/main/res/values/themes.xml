<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸŒž Main Light Theme -->
    <style name="Theme.EduConnect" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/primaryDark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#444444</item>

        <!-- ðŸš« Disable auto dark mode -->
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>

    </style>

    <!-- ðŸš« No ActionBar Variant -->
    <style name="Theme.EduConnect.NoActionBar" parent="Theme.EduConnect">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- âœ¨ Splash Screen Theme -->
    <style name="Theme.EduConnect.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_modern</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
